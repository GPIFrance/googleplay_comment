{% extends '@App/base.home.html.twig' %}

{% block title %}GPI GooglePlay Comment{% endblock %}

{% block body_content %}
	<div class="ui equal width grid">
		<div class="row">
			<div class="column">
				<h1 class="ui center aligned header custom_home_title">Bienvenue sur GPI - GooglePlay comments</h1>
			</div>
		</div>
		<div class="row">
			<div class="column">
				<h2 class="ui center aligned icon header">
					{% if app.user %}
						{% if app.user.roles[0] == 'ROLE_ADMIN' %}
							<i class="circular settings icon"></i>
							<a href="{{ path('app_admin_users') }}">Interface d'administration</a>
						{% else %}
							<i class="circular android icon"></i>
							<a href="{{ path('app_home_apps') }}">Applications</a>
						{% endif %}
					{% else %}
						<i class="circular sign in icon"></i>
						<a href="{{ path('app_home_signin') }}">Connexion</a>
					{% endif %}
				</h2>
			</div>
			<div class="column">
				{% if app.user %}
					<h2 class="ui center aligned icon header"><i class="circular sign out icon"></i>
						<a href="{{ path('app_home_signout') }}">Déconnexion</a>
					</h2>
				{% else %}
					<h2 class="ui center aligned icon header"><i class="circular user icon"></i>
						<a href="{{ path('app_home_signup') }}">Créer un compte</a>
					</h2>
				{% endif %}
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}{{ parent() }}

{% endblock %}